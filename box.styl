$size = 240px
$outer_background = rgba(126,169,232,.5)
$inner_background = rgba(16,58,177,.5)
$rotateTime = 12s
@keyframes boxrO
    0%
        transform rotateX(-35deg) rotateY(45deg)
    70%
        transform rotateX(-35deg) rotateY(405deg)
    100%
        transform rotateX(-35deg) rotateY(405deg)

@keyframes boxrI
    0%
        transform rotateX(-35deg) rotateY(45deg)
    70%
        transform rotateX(-35deg) rotateY(-315deg)
    100%
        transform rotateX(-35deg) rotateY(-315deg)

.webpack-icon  
    position relative
    width $size
    height $size
    margin 120px auto
    .container
        position relative
        width $size
        height $size
        margin  auto
        transform rotateX(-35deg) rotateY(45deg)
        animation boxrO 5s ease-in-out infinite 1s
        transform-style: preserve-3d
        .face
            position absolute
            width $size
            height $size
            border 1px solid #007f80
            background $outer_background
            transform-origin 50%
            backface-visibility hidden

        .front
            transform translateZ($size/2)

        .back
            transform rotateY(180deg) translateZ($size/2)

        .right
            transform rotateY(90deg) translateZ($size/2)

        .left
            transform rotateY(-90deg) translateZ($size/2)

        .top
            transform rotateX(-90deg) translateZ($size/2)

        .bottom
            transform rotateX(90deg) translateZ($size/2)
        

    .innerContainer
        position relative
        width ($size/2)
        height ($size/2)
        top -(($size*3)/4)
        margin  auto
        transform rotateX(-35deg) rotateY(45deg)
        animation boxrI 5s ease-in-out infinite 1s
        transform-style: preserve-3d
        .face
            position absolute
            width ($size/2)
            height ($size/2)
            border 1px solid #007f80
            background $inner_background
            transform-origin 50%
            backface-visibility hidden

        .front
            transform translateZ($size/2/2)

        .back
            transform rotateY(180deg) translateZ($size/2/2)

        .right
            transform rotateY(90deg) translateZ($size/2/2)

        .left
            transform rotateY(-90deg) translateZ($size/2/2)

        .top
            transform rotateX(-90deg) translateZ($size/2/2)

        .bottom
            transform rotateX(90deg) translateZ($size/2/2)
        